   <RelativeLayout
         android:id="@+id/li1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">"

        <ImageButton
            android:id="@+id/wait_jude"
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/daipingjia"
            android:onClick="onClick" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">"
          
          <ImageButton 
            android:onClick="onClick"
            android:id="@+id/answer"
           android:layout_toRightOf="@+id/wait_jude"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/yiyingyue" />


        <ImageButton
            android:onClick="onClick"
            android:layout_toRightOf="@+id/answer"
             android:layout_marginLeft="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/yifabu" />  
        </LinearLayout>

        
        
        <ImageButton
            android:onClick="onClick"
            android:layout_marginRight="20dp"
             android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
