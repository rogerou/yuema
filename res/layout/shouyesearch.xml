                 android:textColor="#ffffff"
                 android:layout_marginLeft="15dp"
                 android:gravity="center"/>              
              </LinearLayout> 
       
             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
              
