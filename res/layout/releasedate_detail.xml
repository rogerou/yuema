<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00c8c7">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />
        
        <TextView
            android:id="@+id/bt1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:textSize="25dp"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">"
      
      <ImageView 
          android:background="@drawable/cat"
          android:layout_width="50dp"
          android:layout_height="50dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_gravity="center_vertical"
          android:text="我的昵称\n2015.3.21"
          android:textColor="#505050"
          android:textSize="20dp" />"
    </LinearLayout>
    
    <View 
           android:layout_width="fill_parent"  
           android:layout_height="1px" 
           android:background="#c0c0c0" 
           android:layout_marginTop="10dp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">
    
        <TextView 
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:text="【我们一起去郊游吧】"
           android:textSize="20dp"/>
        
        <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp">
           
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="22dp"
                android:background="@drawable/line1"/>
            <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="时间：2015.3.21中午"
               android:textSize="18dp"
               android:textColor="#505050"
               android:layout_marginLeft="5dp"/>
           </LinearLayout>
           
        <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp">
           
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="22dp"
                android:background="@drawable/line1"/>
            <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="地点：琶洲花卉展"
               android:textSize="18dp"
               android:textColor="#505050"
               android:layout_marginLeft="5dp"/>
            </LinearLayout>
            
            <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp">
           
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="22dp"
                android:background="@drawable/line2"/>
            <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="人数指定：3-5人"
               android:textSize="18dp"
               android:textColor="#505050"
               android:layout_marginLeft="5dp"/>
           </LinearLayout>
           
            <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp">
           
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="22dp"
                android:background="@drawable/line2"/>
            <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="信物：玫瑰花"
               android:textSize="18dp"
               android:textColor="#505050"
               android:layout_marginLeft="5dp"/>
           </LinearLayout>
            <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp">
           
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="22dp"
                android:background="@drawable/line2"/>
            <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="特别要求：\n对会展情况有一定了解，对会展情况有一定了解，对会展情况有一定了解，对会展情况有一定了解，"
               android:textSize="18dp"
               android:textColor="#505050"
               android:layout_marginLeft="5dp"/>
           </LinearLayout>
           
            <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:gravity="center_vertical">"
           
            <ImageView 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/xin"/>
            <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="选择应约人"
               android:textSize="18dp"
               android:textColor="#505050"
               android:layout_marginLeft="5dp"/>
            </LinearLayout>
           
            <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="8dp"
           android:gravity="center_vertical">
            
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cat"/>
           
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/man"/>
          
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/man"/>
            
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cat"/>
           
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cat"/>
           
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/man"/>
            
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cat"/>
           
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/man"/>
            
          
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>